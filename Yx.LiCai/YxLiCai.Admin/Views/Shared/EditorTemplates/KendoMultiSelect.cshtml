@model YxLiCai.Admin.Models.KendoTextBoxViewModel

<div class="form-group">
    <label class="control-label col-sm-6" for="@Model.Id">@Model.Content</label>
    <div class="col-sm-6 col-md-6">
        <select id="@Model.Id" multiple="multiple"></select>
        <span style="color:red">@Model.Tips</span>  
    </div>
</div>

<script id="headTemplate" type="text/x-kendo-template">
    <div><h2>项目列表</h2></div>
</script>
<script id="itemTemplate" type="text/x-kendo-template">
    <span>
        <img src="/img/#: id #.png" alt="#: name #" />
    </span>
    |
    <span>
        #: Name #
    </span>
</script>
<script>
    var id = '@Model.Id',
        readOnly = '@Model.Readonly';
    var multiselect = $("#" + id).kendoMultiSelect({
        autoBind: false,
        placeholder: "请选择项目...",
        dataTextField: "Name",
        dataValueField: "Id",
        headerTemplate: kendo.template($("#headTemplate").html())
        //,itemTemplate: kendo.template($("#itemTemplate").html())
    }).data("kendoMultiSelect");

    if (readOnly == "true") {
        multiselect.readonly(true);
    }
</script>
