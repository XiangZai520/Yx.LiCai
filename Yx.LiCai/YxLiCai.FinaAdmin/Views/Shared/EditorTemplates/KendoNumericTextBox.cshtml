@model YxLiCai.FinaAdmin.Models.KendoNumericTextBoxViewModel
<div class="form-group">
    <label class="control-label col-sm-6" for="@Model.Id">@Model.Content</label>
    <div class="col-sm-6 col-md-6">
        <input id="@Model.Id" value="@Model.Value" />
    </div>
</div>

<script type="text/javascript">
    var textBoxFormat = '@Model.Format';
    var id = '@Model.Id'; 
    var decimals = '@Model.Decimals';
    var readOnly = '@Model.Readonly';
    var min = '@Model.Min',
        max = '@Model.Max';

    if (max.trim() != "") {
        $("#" + id + "").kendoNumericTextBox({
            decimals: decimals,
            format: textBoxFormat,
            min: min,
            max: max
        });
    }
    else{
        $("#" + id + "").kendoNumericTextBox({
            decimals: decimals,
            format: textBoxFormat,
            min: min
        });
    }
   
    if (readOnly == "true") {
        var numerictextbox = $("#" + id + "").data("kendoNumericTextBox");
        numerictextbox.readonly();
    }
</script>