@model List<YxLiCai.Model.User.UserInvitationModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>e休理财邀请活动</title>
    <meta name="description" content="e休理财">
    <meta name="keywords" content="理财">
    <meta name="author" content="Globak-x">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" name="viewport" />
    <meta content="yes" name="apple-mobile-web-app-capable" />
    <meta name="format-detection" content="telephone=no" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <link href="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "css/m_base.css")" rel="stylesheet">
    <link href="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "css/invite_show.css")" rel="stylesheet">
     <link href="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "css/global_x.css")" rel="stylesheet">
    <script src="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "js/loader/sea.js")"></script>
    
     <script>
         var _hmt = _hmt || [];
         (function () {
             var hm = document.createElement("script");
             hm.src = "//hm.baidu.com/hm.js?4a04f76609debae02c1909eaeb218337";
             var s = document.getElementsByTagName("script")[0];
             s.parentNode.insertBefore(hm, s);
         })();
</script>
    <script src="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "js/loader/sea-config.js")"></script>
</head>
<body>
    <div class="wx-wrap">
        <div class="inviteBanner">
            <div class="inviteTitle"><img src="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "images/inviteShow.png")" /></div>
            <div class="invite-coupon"><img src="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "images/coupon.png")" /></div>
            <div class="ui-btn-red"><a href="/Login/RegisteredOrLogin?inviteCode=@ViewBag.inviteCode">点击开抢</a></div>
        </div>
        <div class="inviteShadow">
            <img src="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "images/inviteShadow.png")">
        </div>
        <div class="wx-trust">
            <div class="wx-title">
                <span class="wx-title-ui-l"></span>
                <h2 class="wx-title-bg">他们也在抢</h2>
                <span class="wx-title-ui-r"></span>
            </div>
            <div class="other-rush">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var mod in Model)
                    {
                        <dl class="wx-user">
                            <dt><img src="@YxLiCai.HttpPageHelper.GetRemoteNetURL(YxLiCai.SystemSiteEnum.StaticResourceMallWeb, "images/yixiu_man.png")" alt=""/></dt>
                            <dd>
                                <div class="wx-user-name">
                                    <strong>@YxLiCai.Tools.Const.SystemConst.PhoneCut(mod.invited_login_name)</strong>
                                    <span>@mod.c_time</span>
                                </div>
                                <div class="wx-user-msg">
                                    <p class="gx-ell">吃了一口一万元大馅饼，感觉自己萌萌哒哈哈哈</p>
                                </div>
                            </dd>
                        </dl>
                    }
                }
            </div>
            <ul class="inviteShow-word">
                <li><span>活动说明：</span></li>
                <li>1、活动时间：2015.8.1-8.20</li>
                <li>2、新人注册即可获得10000元特享金和1%的加息券，有效期15天。</li>
                <li>3、特享金系统将直接买入统将直接买入7%固定收益产品，逐自然月涨0.5%有机会涨至7.5%，收益可提现。</li>
                <li>4、投资时可以使用多张加息券，累计上限到2%。</li>
                <li>5、如用户采用某些特殊技术手段获得特权，一经核实，e休理财有权取消所有奖励。</li>
                <li>6、e休理财保留对本活动的最终解释权。</li>
            </ul>
        </div>
    </div>
</body>
</html>
<!-- 浮动栏 -->
<div class="yx-fixedBar">
    <a class="yx-back" href="javasrcipt:void(0);">返回</a>
    <a class="yx-home" href="/">首页</a>
</div>
<script>
    seajs.use('fixed_bar');  
</script>